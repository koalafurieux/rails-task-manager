<h1><%= @task.title %></h1>
<h2><%= @task.completed ? "☑︎ This task is already completed" : "□ This task is not completed yet" %></h2>

<div class="task_details">
  <p><%= @task.details %></p>
</div>
<br>
<%= link_to 'Edit', edit_task_path(@task) %>
<p> or </p>
<%= link_to 'Delete', task_path(@task), method: :delete, data: { confirm: "Are you sure?" } %>
<br>
<br>
<%= link_to '<-- To Do List', tasks_path %>
